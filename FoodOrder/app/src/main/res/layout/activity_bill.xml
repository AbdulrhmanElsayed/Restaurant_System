<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wood"
    android:layout_height="match_parent"
    tools:context=".activity_bill">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/tokyo" />

    <TextView
        android:layout_width="700dp"
        android:layout_height="110dp"
        android:text="BILL OUT "
        android:textColor="#BFFFFFFF"
        android:textSize="80sp"
        android:gravity="center"
        android:background="#D0501414"
        android:textStyle="bold"
        android:layout_marginLeft="250dp"
        android:id="@+id/bento"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bento"
        android:layout_toRightOf="@+id/srol"
        android:layout_above="@id/btnbill"
        />
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="BiLL Out"
        android:textSize="55sp"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnbill"
        android:layout_centerInParent="true"
        android:onClick="bill"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total is :"
        android:layout_alignParentBottom="true"
        android:textSize="40sp"
        android:textColor="#fff"
        android:layout_marginBottom="15dp"
        android:id="@+id/total"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:layout_alignParentBottom="true"
        android:textSize="40sp"
        android:textColor="#fff"
        android:layout_marginBottom="15dp"
        android:id="@+id/Caltotal"
        android:layout_toRightOf="@id/total"
        />
</RelativeLayout>
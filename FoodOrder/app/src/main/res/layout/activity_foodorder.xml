<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/foodorder"
    android:orientation="vertical"
    android:background="@drawable/wood"
    android:layout_height="match_parent"
    tools:context=".foodorder">



        <ImageView
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/tokyo" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/cancelorder"
            android:layout_toRightOf="@+id/food"
            android:background="#FFFF0000"
            android:text="Cancel\nORder"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="35sp"
            android:layout_alignParentRight="true"
            android:onClick="cancel"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Food Ordering"
            android:textColor="#BFFFFFFF"
            android:textSize="80sp"
            android:gravity="center"
            android:background="#D0501414"
            android:textStyle="bold"
            android:layout_marginLeft="250dp"
            android:id="@+id/food"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/relative1"
            android:layout_marginTop="110dp">

        <Button
            android:id="@+id/donburiButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#ff0000"
            android:text="Donburi"
            android:textColor="#ffffff"
            android:layout_marginLeft="40dp"
            android:textSize="43sp"
            />


        <Button
            android:id="@+id/bentoButton"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="#ff0000"
            android:text="Bento\nMeals"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_marginLeft="260dp"/>

        <Button
            android:id="@+id/sumoButton"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="#ff0000"
            android:text="Sumo\nMeals"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_marginLeft="480dp"
            />

        <Button
            android:id="@+id/feastButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#ff0000"
            android:text="Imperial\nFeast"
            android:textColor="#ffffff"
            android:layout_marginTop="30dp"
            android:textSize="40sp"
            android:layout_below="@id/donburiButton"
            android:layout_marginLeft="40dp" />

        <Button
            android:id="@+id/ramenButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#ff0000"
            android:text="Ramen"
            android:textColor="#ffffff"
            android:layout_marginTop="30dp"
            android:textSize="49sp"
            android:layout_below="@id/bentoButton"
            android:layout_marginLeft="260dp" />

        <Button
            android:id="@+id/snacksButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#ff0000"
            android:text="Snacks"
            android:textColor="#ffffff"
            android:textSize="45sp"
            android:layout_below="@id/sumoButton"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="480dp" />



        <Button
            android:id="@+id/sidesButton"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="#ff0000"
            android:text="Sides\n &amp;AddOns"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/feastButton"
            android:layout_marginLeft="40dp" />

        <Button
            android:id="@+id/dessertsButton"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="#ff0000"
            android:text="Desserts\n &amp; Drinks"
            android:textColor="#ffffff"
            android:layout_marginTop="30dp"
            android:textSize="37sp"
            android:layout_below="@id/ramenButton"
            android:layout_marginLeft="260dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:text="Send\nOrder To\nKitchen"
                    android:textColor="#ffffff"
                    android:background="#FFFF0000"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_marginLeft="480dp"
                    android:onClick="Send"
                    android:layout_below="@+id/snacksButton"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:id="@+id/sendTOkitchen"
                    />

        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/relative1"
            android:layout_below="@+id/food"
            />

</RelativeLayout>